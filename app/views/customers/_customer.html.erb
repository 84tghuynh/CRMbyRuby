<div class="col-sm-3 my-3">
  <div class="card" style="width: 18rem;">
<% if customer.image.present? %>
    <%=link_to image_tag(customer.image, alt: "No Image", class: "card-img-top"), customer %>
<% end %>
    <div class="card-body">
      <h5 class="card-title"><%=link_to customer.fullname, customer %></h5>
      <p class="card-text"><%=customer.notes%></p>
      <p>Phone: <%=customer.phonenumber%></p>
      <p>Email: <%=customer.email%></p>
    </div>
  </div>
</div>